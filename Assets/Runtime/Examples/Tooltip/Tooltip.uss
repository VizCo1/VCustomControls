.tooltip-example {
    align-items: center;
    justify-content: center;
    background-color: rgb(114, 106, 149);
    border-radius: var(--border-radius-example);
    width: 250px;
    height: 100px;
}

.tooltip-example2 {
    background-color: rgb(135, 112, 160);
    margin: 0 0 0 16px;
}

.tooltip-example-label {
    color: var(--color-background);
    -unity-font-style: bold;
    font-size: 32px;
    margin: 0;
    padding: 0;
}

.tooltip-example-container {
    flex-grow: 1;
    justify-content: center;
    align-items: center;
    flex-direction: row;
}

.tooltip1 {
    background-color: var(--color-secondary);
    color: rgb(255, 231, 185);
    -unity-text-align: middle-center;
    font-size: 24px;
    border-radius: var(--border-radius-example);
    margin: 0;
    padding: 4px 8px;
}
