.scrollable-label-container {
    overflow: hidden;
}

.scrollable-label {
    position: absolute;
    margin: 0;
    padding: 0;
}

.container {
    justify-content: center;
    flex-grow: 1;
    width: 650px;
    align-self: center;
}

.scrollable-label-container-example {
    background-color: var(--color-accent);
    border-radius: 4px;
    padding: 8px 16px;
    margin: 8px;
}

.scrollable-label-container-example > .scrollable-label {
    color: var(--color-background);
    font-size: 54px;
}
