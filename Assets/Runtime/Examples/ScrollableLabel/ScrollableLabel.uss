.container {
    justify-content: center;
    flex-grow: 1;
    width: 400px;
    align-self: center;
}

.scrollable-label {
    position: absolute;
    margin: 0;
    padding: 0;
}

.scrollable-label-container-example {
    overflow: hidden;
    background-color: var(--color-accent);
    padding: 4px;
}

.scrollable-label-container-example > .scrollable-label {
    color: var(--color-background);
    font-size: 32px;
}
